# Fellow Learning Qualification System Environment Configuration
# Copy this file to .env and fill in your actual values

# Fellow.ai API Configuration
FELLOW_API_KEY=your_fellow_api_key_here
FELLOW_API_BASE_URL=https://api.fellow.app
FELLOW_API_RATE_LIMIT=100

# Database Configuration  
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fellow_learning
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_URL=postgresql://postgres:password@localhost:5432/fellow_learning

# External API Keys
CLEARBIT_API_KEY=your_clearbit_api_key_here
ZOOMINFO_API_KEY=your_zoominfo_api_key_here

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Model Configuration
MODEL_STORAGE_PATH=./models/
ML_MODEL_VERSION=1.0.0
RETRAINING_THRESHOLD=100
CONFIDENCE_THRESHOLD=0.7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fellow_learning.log
STRUCTURED_LOGGING=true

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services
SLACK_WEBHOOK_URL=your_slack_webhook_for_alerts
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_app_password

# Development/Production Settings
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Data Processing
BATCH_SIZE=50
MAX_CONCURRENT_ENRICHMENTS=10
ENRICHMENT_TIMEOUT=300
CACHE_DURATION=3600

# Model Training
AUTO_RETRAIN=true
RETRAIN_SCHEDULE="0 2 * * *"  # Daily at 2 AM
MODEL_BACKUP_RETENTION_DAYS=30

# Dashboard Configuration
STREAMLIT_PORT=8501
DASHBOARD_AUTH_REQUIRED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_dashboard_password

# Fellow Data Collection
DAILY_FETCH_TIME="06:00"  # UTC
HISTORICAL_DAYS_ON_INIT=30
INTRO_CALL_KEYWORDS="intro,introduction,discovery,initial,first call"

# Company Enrichment
WEB_SCRAPING_ENABLED=true
WEB_SCRAPING_TIMEOUT=30
MAX_PAGES_PER_DOMAIN=5
USER_AGENT="Fellow-Learning-System/1.0"

# Performance Monitoring
METRICS_ENABLED=true
PERFORMANCE_ALERTS_ENABLED=true
MIN_ACCURACY_THRESHOLD=0.75
MAX_RESPONSE_TIME_MS=500

# Feature Engineering
FEATURE_SELECTION_ENABLED=true
MIN_FEATURE_IMPORTANCE=0.01
FEATURE_SCALING_METHOD=standard
TEXT_VECTORIZATION_MAX_FEATURES=1000